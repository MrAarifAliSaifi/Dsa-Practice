public class Reverse_A_Array {
    public static void main(String[] args) {
        int arr[]={1,2,3,2,1,4,5,6,7,8};
        int i=0,j= arr.length-1;
        while (i<j){
            int temp=arr[i];
            arr[i]=arr[j];
            arr[j]=temp;
            i++;
            j--;
        }
        System.out.println(Arrays.toString(arr));
    }
}
